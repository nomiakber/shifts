<% if @report = current_user.current_shift.report %>
  <li>
    <% if current_user.is_admin_of?(@report.shift.location.loc_group) || current_user == link.author %>
      <%= link_to fa_icon('minus-circle'), { controller: 'notices',
      action: 'destroy', id: link.id },
      confirm: "Are you sure you want to remove this link?", method: :delete %>
    <% end %>
    <%= link_to link.content, link.url, target: "_blank" %>
  </li>
<% end %>

