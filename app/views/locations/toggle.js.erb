$('#flash').html("<%= escape_javascript render partial: 'layouts/flash', locals: {flash: flash} %>");
<% flash.discard %>
$('#loc<%= @location.id %>').toggleClass('disabled');
<% if @location.active %>
	$('#loc<%= @location.id %> a.toggle_link').text('Deactivate');
<% else %>
	$('#loc<%= @location.id %> a.toggle_link').text('Restore');
<% end %>
