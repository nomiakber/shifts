<% if user_has_active_shift? %>
  <i class="fa fa-asterisk"></i>
  <%= link_to "Return to your current shift report", (current_user.current_shift.report.nil? ? shift_path(current_user.current_shift) : report_path(current_user.current_shift.report)) %>
<% else %>
  <i class="fa fa-plus"></i>
  <%= link_to "Start an unscheduled shift", new_unscheduled_shifts_path, remote: true %>
  <div id="unscheduled" style="display:none">
  </div>
<% end %>
