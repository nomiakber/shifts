<% title "Showing #{@task.name}" %>

<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Kind:</b>
  <%= @task.kind %>
</p>

<p>
  <b>Location:</b>
  <%= Location.find(@task.location_id).name %>
</p>

<p>
  <b>Start:</b>
  <%= @task.start.strftime("%A, %B %d %Y") %>
</p>

<p>
  <b>End:</b>
  <%= @task.end.strftime("%A, %B %d %Y") %>
</p>

<p>
  <b>Time:</b>
  <%= @task.time_of_day.to_s(:am_pm) %>
</p>

<p>
  <b>Weekday:</b>
  <%= @task.day_in_week %>
</p>

<p>
  <b>Active:</b>
  <%= @task.active %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Destroy', @task, confirm: 'Are you sure?', method: :delete %> |
<%= link_to 'Back', tasks_path %>